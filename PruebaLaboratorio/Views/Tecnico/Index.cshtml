<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="lblTitulo"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="frmGuardar" method="post">

                    <input type="hidden" id="txtIdTecnico" class="form-control" value="0" name="IdTecnico" />

                    <label>Ingrese Nombre Tecnico</label>
                    <input type="text" class="form-control ob max-100" name="NombreTec" />

                    <label>Codigo</label>
                    <input class="form-control ob max-200" name="CodigoTec"/>
                    
                    <label>Sueldo</label>
                    <input class="form-control ob max-200" type="number" max="10" name="SueldoBaseTec" />
                    
                   @*  <label>Sucursal</label>
                    <select class="form-select ob max-200" type="text" max="10" name="SucursalId">
                      <option value="">

                      </option>
                    </select> *@
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnCerrar" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" onclick="Guardar()" class="btn btn-primary">Guardar</button>
            </div>
        </div>
    </div>
</div>


